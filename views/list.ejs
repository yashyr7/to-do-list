<%- include("header") -%>

  <body>
    <div class="box">
      <h1 id="heading"><%= listTitle %></h1>
    </div>
    <div class="box">
      <% newListItems.forEach((e) => {%>
        <form action="/delete" method="POST">
          <div class="item">
            <input type="checkbox" value="<%= e._id %>" onChange="this.form.submit()" name="checkbox">
            <p><%= e.name%></p>
            <input type="hidden" value="<%= listTitle %>" name="listName">
          </div>
        </form>
      <%})%>
      <form class="item" action="/" method="POST">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" value="<%= listTitle %>">+</button>
      </form>
    </div>
  </body>
  <%- include("footer") -%>